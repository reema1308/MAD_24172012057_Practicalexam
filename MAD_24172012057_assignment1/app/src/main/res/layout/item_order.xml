<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    android:padding="14dp">

    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #1024"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <LinearLayout android:orientation="horizontal" android:layout_marginTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_calendar" android:tint="#555"/>
            <TextView android:id="@+id/tvOrderDate" android:layout_marginStart="8dp" android:text="15 Feb 2025" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_marginTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_rupee" android:tint="#333"/>
            <TextView android:id="@+id/tvOrderTotal" android:layout_marginStart="8dp" android:text="â‚¹1299" android:textSize="16sp" android:textStyle="bold" android:textColor="#333"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Delivered"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/status_delivered_bg"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
