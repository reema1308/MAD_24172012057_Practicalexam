<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:padding="12dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_bg_light"
            android:padding="8dp"/>

        <LinearLayout android:orientation="vertical" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">
            <TextView android:id="@+id/tvCustomerName" android:text="Customer Name" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:id="@+id/tvCustomerEmail" android:text="email@example.com" android:textSize="14sp" android:textColor="#666" android:layout_marginTop="2dp"/>
            <TextView android:id="@+id/tvCustomerPhone" android:text="+91 9876543210" android:textSize="14sp" android:textColor="#666" android:layout_marginTop="2dp"/>
            <TextView android:id="@+id/tvJoinDate" android:text="Joined: 20-03-2024" android:textSize="13sp" android:textColor="#999" android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView android:id="@+id/btnView" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_arrow_right" android:tint="#000"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
